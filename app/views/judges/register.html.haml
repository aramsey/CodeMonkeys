%meta{name: "viewport", content: "width= device-width, initial-scale=1"}
%div{:class => "container"}
    = form_for @judge, url: judge_assign_path(@judge.id), multipart: true do
        %div
            = label_tag :name, "Enter your name: "
            = text_field_tag :name
        %div
            = label_tag :company, "Enter the name of your company: "
            = text_field_tag :company
        %div
            = submit_tag "Register", class: "btn btn-default"
            - if flash[:error]
                #notice.message= flash[:error]
